  <script>
    let b_1 =  document.querySelector(".b_1")
        let b_2 =  document.querySelector(".b_2")
        let box = document.querySelector(".box")

        let degres = 0

        b_2.addEventListener("click", function (){
            let items=[...document.querySelectorAll(".item_services")]
            document.querySelector(".box").appendChild(items[0])
        })
        b_1.addEventListener("click", function (){
            let items=[...document.querySelectorAll(".item_services")]
            document.querySelector(".box").prepend(items[((items.length) - 1)])
        })
const slides = document.querySelectorAll('.content');
    const nextBtn = document.getElementById('nextBtn');
    const prevBtn = document.getElementById('prevBtn');
    let currentIdx = 0;
    let timer;

    function dispararVibracao() {
        nextBtn.classList.add('vibrar-dir');
        prevBtn.classList.add('vibrar-esq');
        setTimeout(() => {
            nextBtn.classList.remove('vibrar-dir');
            prevBtn.classList.remove('vibrar-esq');
        }, 400);
    }

    function showSlide(index) {
        slides.forEach(s => s.classList.remove('active'));
        slides[index].classList.add('active');
        currentIdx = index;
        dispararVibracao();
    }

    function nextSlide() {
        let index = (currentIdx + 1) % slides.length;
        showSlide(index);
    }

    function startAutoPlay() {
        if (slides.length > 1) {
            timer = setInterval(nextSlide, 5000);
        }
    }

    function resetTimer() {
        clearInterval(timer);
        startAutoPlay();
    }

    nextBtn.addEventListener('click', () => {
        nextSlide();
        resetTimer();
    });

    prevBtn.addEventListener('click', () => {
        let index = (currentIdx - 1 + slides.length) % slides.length;
        showSlide(index);
        resetTimer();
    });

    startAutoPlay();

  </script>
</div>
