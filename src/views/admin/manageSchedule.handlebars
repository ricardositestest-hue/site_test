<div class="container">
    <div class="header">
        <a href="#" onclick="window.history.back()" class="btn-back">
            <i data-lucide="chevron-left" style="width:14px"></i> Voltar
        </a>
        <h2>Horários de {{profissional.nome}}</h2>
    </div>
    <div class="img-preview-container">
        {{#if profissional.img}}
            <img src="/img/Profisional/{{profissional.img}}" alt="Foto de {{profissional.nome}}">
            <span>Imagem ativa</span>
        {{else}}
            <div>
                <i data-lucide="user" style="width:20px; color:#444;"></i>
            </div>
            <span>Sem foto</span>
        {{/if}}
    </div>

    <form action="/admin/professionals/schedule/{{profissional.id}}" method="POST">
        
        {{#each grade}}
        <div class="day-card">
            <div class="day-header">
                <span class="day-name">{{dia_semana}}</span>
                <div class="switch-area">
                    <span>Atende neste dia?</span>
                    <input type="checkbox" name="{{dia_semana}}_abre" {{#if abre}}checked{{/if}}>
                </div>
            </div>

            <div class="time-settings-grid">
                <div class="time-group">
                    <label><i data-lucide="sun" style="width:12px"></i> Abertura</label>
                    <input type="time" name="{{dia_semana}}_abertura" value="{{abertura}}">
                </div>

                <div class="time-group">
                    <label><i data-lucide="moon" style="width:12px"></i> Fechamento</label>
                    <input type="time" name="{{dia_semana}}_fechamento" value="{{fechamento}}">
                </div>

                <div class="break-divider"></div>

                <div class="time-group">
                    <label><i data-lucide="coffee" style="width:12px"></i> Início Pausa</label>
                    <input type="time" name="{{dia_semana}}_pausa_inicio" value="{{pausa_inicio}}">
                </div>

                <div class="time-group">
                    <label><i data-lucide="play" style="width:12px"></i> Fim Pausa</label>
                    <input type="time" name="{{dia_semana}}_pausa_fim" value="{{pausa_fim}}">
                </div>
            </div>
        </div>
        {{/each}}

        <div class="footer-actions">
            <button type="submit" class="btn-save">
                <i data-lucide="check-circle" style="width:18px"></i> Salvar Grade Semanal
            </button>
        </div>
    </form>
</div>

<script>
    lucide.createIcons();
</script>