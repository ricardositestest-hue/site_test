<div class="login-card">
    <div class="logo-area">
        <div class="logo-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"></path></svg>
        </div>
        <h2>Bem-vindo de volta</h2>
        <p class="subtitle">Acesse sua conta administrativa</p>
    </div>

    {{#if error}}
        <div class="error-alert">
            {{error}}
        </div>
    {{/if}}

    <form action="/admin/login" method="POST">
        <div class="form-group">
            <label>Email Corporativo</label>
            <input type="email" name="email" required placeholder="exemplo@empresa.com">
        </div>

        <div class="form-group">
            <label>Senha de Acesso</label>
            <input type="password" name="senha" required placeholder="••••••••">
        </div>

        <button type="submit">Entrar no Painel</button>
    </form>

    <a href="#" class="forgot-password">Esqueceu sua senha?</a>
</div>
